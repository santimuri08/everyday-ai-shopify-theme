{% layout 'theme' %}

<div class="customer-account-page">
  <div class="page-width">
    <!-- Account Header -->
    <div class="account-header">
      <div class="account-welcome">
        <h1 class="account-title">Welcome back, {{ customer.first_name }}!</h1>
        <p class="account-subtitle">Manage your account, orders, and wishlist</p>
      </div>
      <a href="{{ routes.account_logout_url }}" class="btn-logout">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
          <polyline points="16 17 21 12 16 7"/>
          <line x1="21" y1="12" x2="9" y2="12"/>
        </svg>
        Sign Out
      </a>
    </div>
    
    <!-- Account Grid -->
    <div class="account-grid">
      <!-- Account Information Card -->
      <div class="account-card account-info-card">
        <div class="card-header">
          <h2 class="card-title">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
            Account Details
          </h2>
        </div>
        <div class="card-body">
          <div class="info-row">
            <span class="info-label">Name:</span>
            <span class="info-value">{{ customer.first_name }} {{ customer.last_name }}</span>
          </div>
          <div class="info-row">
            <span class="info-label">Email:</span>
            <span class="info-value">{{ customer.email }}</span>
          </div>
          <div class="info-row">
            <span class="info-label">Member Since:</span>
            <span class="info-value">{{ customer.created_at | date: '%B %d, %Y' }}</span>
          </div>
          
          <div class="card-actions">
            <a href="{{ routes.account_addresses_url }}" class="btn-card-action">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
              Manage Addresses
            </a>
          </div>
        </div>
      </div>
      
      <!-- Recent Orders Card -->
      <div class="account-card orders-card">
        <div class="card-header">
          <h2 class="card-title">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="9" cy="21" r="1"/>
              <circle cx="20" cy="21" r="1"/>
              <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
            </svg>
            Recent Orders
          </h2>
          {% if customer.orders.size > 0 %}
            <a href="{{ routes.account_url }}/orders" class="card-link">View All</a>
          {% endif %}
        </div>
        <div class="card-body">
          {% if customer.orders.size > 0 %}
            <div class="orders-list">
              {% for order in customer.orders limit: 5 %}
                <div class="order-item">
                  <div class="order-header">
                    <div class="order-number">
                      <strong>Order #{{ order.name }}</strong>
                      <span class="order-date">{{ order.created_at | date: '%B %d, %Y' }}</span>
                    </div>
                    <span class="order-status order-status-{{ order.financial_status }}">
                      {{ order.financial_status }}
                    </span>
                  </div>
                  
                  <div class="order-details">
                    <div class="order-items">
                      {{ order.line_items.size }} 
                      {% if order.line_items.size == 1 %}item{% else %}items{% endif %}
                    </div>
                    <div class="order-total">{{ order.total_price | money }}</div>
                  </div>
                  
                  <div class="order-actions">
                    <a href="{{ order.customer_url }}" class="btn-order-view">
                      View Details
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                      </svg>
                    </a>
                  </div>
                </div>
              {% endfor %}
            </div>
          {% else %}
            <div class="empty-state">
              <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="9" cy="21" r="1"/>
                <circle cx="20" cy="21" r="1"/>
                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
              </svg>
              <p class="empty-title">No orders yet</p>
              <p class="empty-text">When you place orders, they'll appear here</p>
              <a href="{{ routes.all_products_collection_url }}" class="btn-primary-alt">
                Start Shopping
              </a>
            </div>
          {% endif %}
        </div>
      </div>
      
      <!-- Wishlist Card -->
      <div class="account-card wishlist-card">
        <div class="card-header">
          <h2 class="card-title">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
            </svg>
            My Wishlist
          </h2>
          <span class="wishlist-count" id="wishlist-count-header">0</span>
        </div>
        <div class="card-body">
          <div id="wishlist-items-container">
            <!-- Wishlist items will be loaded here by JavaScript -->
          </div>
        </div>
      </div>
      
      <!-- Quick Actions Card -->
      <div class="account-card quick-actions-card">
        <div class="card-header">
          <h2 class="card-title">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
            </svg>
            Quick Actions
          </h2>
        </div>
        <div class="card-body">
          <div class="quick-actions-grid">
            <a href="{{ routes.account_addresses_url }}" class="quick-action">
              <div class="quick-action-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
              </div>
              <div class="quick-action-content">
                <span class="quick-action-title">Addresses</span>
                <span class="quick-action-desc">Manage shipping addresses</span>
              </div>
            </a>
            
            <a href="/pages/contact" class="quick-action">
              <div class="quick-action-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                </svg>
              </div>
              <div class="quick-action-content">
                <span class="quick-action-title">Contact Support</span>
                <span class="quick-action-desc">Get help from our team</span>
              </div>
            </a>
            
            <a href="{{ routes.all_products_collection_url }}" class="quick-action">
              <div class="quick-action-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="3" width="18" height="18" rx="2"/>
                  <path d="M3 9h18M9 21V9"/>
                </svg>
              </div>
              <div class="quick-action-content">
                <span class="quick-action-title">Browse Products</span>
                <span class="quick-action-desc">Explore our collection</span>
              </div>
            </a>
            
            <a href="/blogs/news" class="quick-action">
              <div class="quick-action-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
                  <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
                </svg>
              </div>
              <div class="quick-action-content">
                <span class="quick-action-title">Read Blog</span>
                <span class="quick-action-desc">Latest news and updates</span>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .customer-account-page {
    padding: 60px 0;
    background: var(--background, #fefdfb);
    min-height: calc(100vh - 200px);
  }
  
  .account-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 48px;
    padding-bottom: 24px;
    border-bottom: 3px solid var(--primary, #1d4035);
  }
  
  .account-welcome {
    flex: 1;
  }
  
  .account-title {
    font-size: 2.5rem;
    color: var(--primary, #1d4035);
    font-weight: 700;
    margin-bottom: 8px;
  }
  
  .account-subtitle {
    font-size: 1.125rem;
    color: #6b7280;
  }
  
  .btn-logout {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: white;
    border: 2px solid #dc2626;
    color: #dc2626;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .btn-logout:hover {
    background: #dc2626;
    color: white;
    transform: translateY(-2px);
  }
  
  .account-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
  }
  
  .account-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .account-card:hover {
    box-shadow: 0 12px 40px rgba(0,0,0,0.12);
  }
  
  .card-header {
    background: var(--primary, #1d4035);
    color: white;
    padding: 20px 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .card-link {
    color: white;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 600;
    opacity: 0.9;
    transition: opacity 0.3s ease;
  }
  
  .card-link:hover {
    opacity: 1;
    text-decoration: underline;
  }
  
  .wishlist-count {
    background: var(--accent, #b85a1f);
    color: white;
    font-weight: 700;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.875rem;
  }
  
  .card-body {
    padding: 24px;
  }
  
  /* Account Info Card */
  .info-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .info-row:last-of-type {
    border-bottom: none;
  }
  
  .info-label {
    font-weight: 600;
    color: #6b7280;
  }
  
  .info-value {
    color: var(--primary, #1d4035);
    font-weight: 600;
  }
  
  .card-actions {
    margin-top: 24px;
  }
  
  .btn-card-action {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    width: 100%;
    padding: 12px;
    background: var(--accent, #b85a1f);
    color: white;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .btn-card-action:hover {
    background: var(--primary, #1d4035);
    transform: translateY(-2px);
  }
  
  /* Orders Card */
  .orders-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  
  .order-item {
    padding: 16px;
    background: #f9fafb;
    border-radius: 12px;
    border-left: 4px solid var(--accent, #b85a1f);
  }
  
  .order-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
  }
  
  .order-number strong {
    display: block;
    color: var(--primary, #1d4035);
    font-size: 1rem;
    margin-bottom: 4px;
  }
  
  .order-date {
    font-size: 0.875rem;
    color: #6b7280;
  }
  
  .order-status {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .order-status-paid,
  .order-status-authorized {
    background: #d4f4dd;
    color: #0f5132;
  }
  
  .order-status-pending {
    background: #fff3cd;
    color: #856404;
  }
  
  .order-status-refunded {
    background: #f8d7da;
    color: #721c24;
  }
  
  .order-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
  }
  
  .order-items {
    font-size: 0.9375rem;
    color: #6b7280;
  }
  
  .order-total {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--accent, #b85a1f);
  }
  
  .order-actions {
    display: flex;
    gap: 12px;
  }
  
  .btn-order-view {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: var(--accent, #b85a1f);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9375rem;
    transition: gap 0.3s ease;
  }
  
  .btn-order-view:hover {
    gap: 10px;
    color: var(--primary, #1d4035);
  }
  
  /* Empty State */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
    text-align: center;
  }
  
  .empty-state svg {
    color: #d1d5db;
    margin-bottom: 16px;
  }
  
  .empty-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--primary, #1d4035);
    margin-bottom: 8px;
  }
  
  .empty-text {
    color: #6b7280;
    margin-bottom: 20px;
  }
  
  .btn-primary-alt {
    display: inline-block;
    padding: 12px 24px;
    background: var(--accent, #b85a1f);
    color: white;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .btn-primary-alt:hover {
    background: var(--primary, #1d4035);
    transform: translateY(-2px);
  }
  
  /* Wishlist */
  .wishlist-items {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .wishlist-item {
    display: flex;
    gap: 16px;
    padding: 12px;
    background: #f9fafb;
    border-radius: 12px;
    transition: all 0.3s ease;
  }
  
  .wishlist-item:hover {
    background: #f3f4f6;
  }
  
  .wishlist-item-image {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
    border-radius: 8px;
    overflow: hidden;
    background: white;
  }
  
  .wishlist-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .wishlist-item-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .wishlist-item-title {
    font-weight: 600;
    color: var(--primary, #1d4035);
    margin-bottom: 4px;
    text-decoration: none;
  }
  
  .wishlist-item-title:hover {
    color: var(--accent, #b85a1f);
  }
  
  .wishlist-item-price {
    font-weight: 700;
    color: var(--accent, #b85a1f);
    font-size: 1.125rem;
  }
  
  .wishlist-item-actions {
    display: flex;
    flex-direction: column;
    gap: 8px;
    justify-content: center;
  }
  
  .btn-wishlist-action {
    padding: 8px 16px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    white-space: nowrap;
  }
  
  .btn-add-to-cart {
    background: var(--accent, #b85a1f);
    color: white;
  }
  
  .btn-add-to-cart:hover {
    background: var(--primary, #1d4035);
  }
  
  .btn-remove {
    background: white;
    color: #dc2626;
    border: 1px solid #dc2626;
  }
  
  .btn-remove:hover {
    background: #dc2626;
    color: white;
  }
  
  /* Quick Actions */
  .quick-actions-grid {
    display: grid;
    gap: 12px;
  }
  
  .quick-action {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    background: #f9fafb;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .quick-action:hover {
    background: var(--primary, #1d4035);
    transform: translateX(4px);
  }
  
  .quick-action:hover .quick-action-icon {
    background: white;
    color: var(--primary, #1d4035);
  }
  
  .quick-action:hover .quick-action-title,
  .quick-action:hover .quick-action-desc {
    color: white;
  }
  
  .quick-action-icon {
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    background: var(--primary, #1d4035);
    color: white;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .quick-action-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .quick-action-title {
    font-weight: 700;
    color: var(--primary, #1d4035);
    font-size: 1rem;
  }
  
  .quick-action-desc {
    font-size: 0.875rem;
    color: #6b7280;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .account-grid {
      grid-template-columns: 1fr;
    }
    
    .orders-card,
    .wishlist-card {
      grid-column: 1 / -1;
    }
  }
  
  @media (max-width: 640px) {
    .account-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
    }
    
    .account-title {
      font-size: 2rem;
    }
    
    .btn-logout {
      width: 100%;
      justify-content: center;
    }
    
    .order-header {
      flex-direction: column;
      gap: 12px;
    }
    
    .wishlist-item {
      flex-direction: column;
    }
    
    .wishlist-item-image {
      width: 100%;
      height: 200px;
    }
    
    .wishlist-item-actions {
      flex-direction: row;
    }
    
    .btn-wishlist-action {
      flex: 1;
    }
  }
</style>

<script src="{{ 'customer-accounts.js' | asset_url }}" defer></script>