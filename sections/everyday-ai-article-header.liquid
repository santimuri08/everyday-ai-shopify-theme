{% comment %}
  Article Header - Featured image and metadata
{% endcomment %}

<article class="everyday-ai-article-header">
  {% if article.image %}
    <div class="article-hero-image">
      <img 
        src="{{ article.image | image_url: width: 1600 }}"
        alt="{{ article.image.alt | escape }}"
        loading="eager"
      >
    </div>
  {% endif %}
</article>

<style>
  .everyday-ai-article-header {
    margin-bottom: 40px;
  }
  
  .article-hero-image {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
  }
  
  .article-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>

{% schema %}
{
  "name": "Article Header",
  "presets": [
    {
      "name": "Article Header"
    }
  ]
}
{% endschema %}
