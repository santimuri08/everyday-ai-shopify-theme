  "name": "Recipes Showcase",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Quick Student Recipes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Fast, affordable meals perfect for dorm kitchens and busy schedules"
    }
  ],
  "blocks": [
    {
      "type": "recipe",
      "name": "Recipe",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Recipe Image"
        },
        {
          "type": "text",
