    }
  ],
  "presets": [
    {
      "name": "Recipes Showcase",
      "blocks": [
        {
          "type": "recipe"
        },
        {
          "type": "recipe"
        },
        {
          "type": "recipe"
        }
      ]
    }
  ]
}
{% endschema %}