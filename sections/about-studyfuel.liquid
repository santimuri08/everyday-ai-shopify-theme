<section class="about-section">
  <div class="about-container">
    <div class="about-content">
      <h2>{{ section.settings.name }}</h2>
      <p class="about-title">{{ section.settings.title }}</p>
      <div class="about-bio">
        {{ section.settings.bio }}
      </div>
      
      {% if section.settings.show_social %}
        <div class="social-links">
          {% if section.settings.tiktok_url %}
            <a href="{{ section.settings.tiktok_url }}" target="_blank">
              <i class="fab fa-tiktok"></i> TikTok
            </a>
          {% endif %}
          {% if section.settings.instagram_url %}
            <a href="{{ section.settings.instagram_url }}" target="_blank">
              <i class="fab fa-instagram"></i> Instagram
            </a>
          {% endif %}
          {% if section.settings.youtube_url %}
            <a href="{{ section.settings.youtube_url }}" target="_blank">
              <i class="fab fa-youtube"></i> YouTube
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
    
    {% if section.settings.image %}
      <div class="about-image-wrapper">
        <img src="{{ section.settings.image | img_url: 'large' }}" 
             alt="{{ section.settings.name }}">
      </div>
    {% endif %}
  </div>
</section>

<style>
  .about-section {
    padding: 60px 20px;
    background: var(--background);
  }
  
  .about-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 40px;
  }
  
  .about-content {
    text-align: center;
  }
  
  .about-content h2 {
    font-size: 2.5rem;
    color: var(--primary);
    margin-bottom: 10px;
    font-weight: 700;
  }
  
  .about-title {
    font-size: 1.2rem;
    color: var(--accent);
    font-weight: 600;
    margin-bottom: 20px;
  }
  
  .about-bio {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--primary);
    margin-bottom: 30px;
  }
  
  .about-image-wrapper {
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
  }
  
  .about-image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .social-links {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .social-links a {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: var(--accent);
    color: white;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
    font-weight: 600;
  }
  
  .social-links a:hover {
    background: var(--primary);
    transform: translateY(-2px);
  }
  
  @media (max-width: 768px) {
    .about-content h2 {
      font-size: 2rem;
    }
    
    .about-bio {
      font-size: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "About StudyFuel",
  "settings": [
    {
      "type": "text",
      "id": "name",
      "label": "Brand Name",
      "default": "StudyFuel"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Tagline",
      "default": "Save time, eat healthier, fuel your studies"
    },
    {
      "type": "richtext",
      "id": "bio",
      "label": "Description",
      "default": "<p>StudyFuel helps busy students like you save time and eat healthier with fast, affordable recipes designed for dorm and apartment kitchens. No more expensive takeout or boring meal prep - just delicious, budget-friendly meals that fuel your studies and fit your schedule.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Brand Image"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show Social Links",
      "default": true
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    }
  ],
  "presets": [
    {
      "name": "About StudyFuel"
    }
  ]
}
{% endschema %}