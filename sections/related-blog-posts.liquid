{% comment %}
  Related Blog Posts Section
  Shows related articles based on tags
{% endcomment %}

<section class="related-blog-posts">
  <div class="page-width">
    <h2 class="related-posts-title">{{ section.settings.title }}</h2>
    
    <div class="related-posts-grid">
      {% assign related_posts_count = 0 %}
      {% assign max_posts = section.settings.posts_to_show %}
      
      {% comment %} Get posts with matching tags {% endcomment %}
      {% for tag in article.tags %}
        {% if related_posts_count >= max_posts %}
          {% break %}
        {% endif %}
        
        {% for blog_article in blogs[article.blog.handle].articles %}
          {% if related_posts_count >= max_posts %}
            {% break %}
          {% endif %}
          
          {% if blog_article.id != article.id %}
            {% if blog_article.tags contains tag %}
              {% assign related_posts_count = related_posts_count | plus: 1 %}
              
              <article class="related-post-card">
                {% if blog_article.image %}
                  <a href="{{ blog_article.url }}" class="related-post-image">
                    <img 
                      src="{{ blog_article.image | image_url: width: 600 }}"
                      alt="{{ blog_article.image.alt | escape }}"
                      loading="lazy"
                    >
                  </a>
                {% endif %}
                
                <div class="related-post-content">
                  <div class="related-post-meta">
                    <span class="related-post-date">
                      {{ blog_article.published_at | date: '%B %d, %Y' }}
                    </span>
                  </div>
                  
                  <h3 class="related-post-title">
                    <a href="{{ blog_article.url }}">{{ blog_article.title }}</a>
                  </h3>
                  
                  {% if blog_article.excerpt != blank %}
                    <p class="related-post-excerpt">
                      {{ blog_article.excerpt | strip_html | truncate: 120 }}
                    </p>
                  {% endif %}
                  
                  <a href="{{ blog_article.url }}" class="related-post-link">
                    Read More <i class="fas fa-arrow-right"></i>
                  </a>
                </div>
              </article>
            {% endif %}
          {% endif %}
        {% endfor %}
      {% endfor %}
      
      {% comment %} If no related posts found, show latest posts {% endcomment %}
      {% if related_posts_count == 0 %}
        {% for blog_article in blogs[article.blog.handle].articles limit: max_posts %}
          {% if blog_article.id != article.id %}
            <article class="related-post-card">
              {% if blog_article.image %}
                <a href="{{ blog_article.url }}" class="related-post-image">
                  <img 
                    src="{{ blog_article.image | image_url: width: 600 }}"
                    alt="{{ blog_article.image.alt | escape }}"
                    loading="lazy"
                  >
                </a>
              {% endif %}
              
              <div class="related-post-content">
                <div class="related-post-meta">
                  <span class="related-post-date">
                    {{ blog_article.published_at | date: '%B %d, %Y' }}
                  </span>
                </div>
                
                <h3 class="related-post-title">
                  <a href="{{ blog_article.url }}">{{ blog_article.title }}</a>
                </h3>
                
                {% if blog_article.excerpt != blank %}
                  <p class="related-post-excerpt">
                    {{ blog_article.excerpt | strip_html | truncate: 120 }}
                  </p>
                {% endif %}
                
                <a href="{{ blog_article.url }}" class="related-post-link">
                  Read More <i class="fas fa-arrow-right"></i>
                </a>
              </div>
            </article>
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<style>
  .related-blog-posts {
    padding: 80px 0;
    background: var(--background);
  }
  
  .related-posts-title {
    font-size: 2.5rem;
    color: var(--primary);
    text-align: center;
    margin-bottom: 48px;
    font-weight: 700;
  }
  
  .related-posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 32px;
  }
  
  .related-post-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
  }
  
  .related-post-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.15);
  }
  
  .related-post-image {
    display: block;
    width: 100%;
    height: 200px;
    overflow: hidden;
  }
  
  .related-post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .related-post-card:hover .related-post-image img {
    transform: scale(1.05);
  }
  
  .related-post-content {
    padding: 24px;
  }
  
  .related-post-meta {
    margin-bottom: 12px;
  }
  
  .related-post-date {
    font-size: 0.875rem;
    color: var(--accent);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .related-post-title {
    font-size: 1.25rem;
    margin-bottom: 12px;
    font-weight: 700;
    line-height: 1.3;
  }
  
  .related-post-title a {
    color: var(--primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .related-post-title a:hover {
    color: var(--accent);
  }
  
  .related-post-excerpt {
    color: #666;
    line-height: 1.6;
    margin-bottom: 16px;
  }
  
  .related-post-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--accent);
    text-decoration: none;
    font-weight: 600;
    transition: gap 0.3s ease;
  }
  
  .related-post-link:hover {
    gap: 12px;
  }
  
  @media (max-width: 768px) {
    .related-posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Related Blog Posts",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Related Articles"
    },
    {
      "type": "range",
      "id": "posts_to_show",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Number of Posts to Show",
      "default": 3
    }
  ],
  "presets": [
    {
      "name": "Related Blog Posts"
    }
  ]
}
{% endschema %}
