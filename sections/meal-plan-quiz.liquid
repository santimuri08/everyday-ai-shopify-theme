  }
  
  .progress-text {
    color: white;
    font-weight: 600;
  }
  
  @media (max-width: 768px) {
    #quiz-content {
      padding: 30px 20px;
    }
    
    .quiz-header h1 {
      font-size: 2rem;
    }
    
    .quiz-question h2 {
      font-size: 1.5rem;
    }
    
