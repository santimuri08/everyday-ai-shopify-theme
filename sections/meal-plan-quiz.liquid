    color: #666;
    font-size: 0.95rem;
  }
  
  .quiz-result {
    display: none;
    text-align: center;
  }
  
  .quiz-result.active {
    display: block;
    animation: fadeIn 0.5s ease;
  }
  
  .result-content h2 {
    font-size: 2.5rem;
    color: #1d4035;
    margin-bottom: 40px;
    font-weight: 700;
  }
  
  .recommended-plan {
    background: linear-gradient(135deg, #1d4035 0%, #b85a1f 100%);
