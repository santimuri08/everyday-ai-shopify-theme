/* ============================================
   EVERYDAY AI - SHOPIFY THEME BRANDING
   Design System: Modern, Professional, Trust-Building
   ============================================ */

:root {
    /* Brand Colors - Dynamic from theme settings */
    --primary: {{ settings.brand_primary | default: '#1d4035' }};
    --accent: {{ settings.brand_accent | default: '#b85a1f' }};
    --background: {{ settings.brand_warm_white | default: '#fefdfb' }};
    --surface: {{ settings.brand_cream | default: '#f7f5f0' }};
    
    /* Typography System */
    --font-heading: 'Helvetica Neue', Arial, sans-serif;
    --font-body: 'Helvetica Neue', Arial, sans-serif;
    
    /* Spacing Scale */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 4rem;
    --spacing-xl: 6rem;
}

/* ============================================
   GLOBAL BODY STYLES
   ============================================ */
body {
    background-color: var(--background);
    color: var(--primary);
    font-family: var(--font-body);
}

/* ============================================
   BUTTON SYSTEM
   ============================================ */
.btn-primary {
    background: var(--accent);
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
}

.btn-primary:hover {
    background: var(--primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(29, 64, 53, 0.2);
}

.btn-secondary {
    background: transparent;
    color: var(--primary);
    border: 2px solid var(--primary);
    padding: 10px 22px;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-secondary:hover {
    background: var(--primary);
    color: white;
}

/* ============================================
   HERO SECTION STYLES
   ============================================ */
.everyday-ai-hero {
    background: linear-gradient(135deg, var(--surface) 0%, var(--background) 100%);
    padding: var(--spacing-xl) var(--spacing-md);
    text-align: center;
}

.hero-container {
    max-width: 1200px;
    margin: 0 auto;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: var(--spacing-sm);
    line-height: 1.2;
}

.hero-subtitle {
    font-size: 1.2rem;
    color: var(--accent);
    font-weight: 600;
    letter-spacing: 2px;
    margin-bottom: var(--spacing-sm);
}

.hero-description {
    font-size: 1.1rem;
    color: var(--primary);
    margin-bottom: var(--spacing-md);
}

.hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

/* ============================================
   NAVIGATION STYLES
   ============================================ */
.everyday-ai-nav {
    background: var(--primary);
    padding: 1rem 2rem;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.nav-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-logo {
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
}

.nav-menu {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
}

.nav-link {
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
}

.nav-link:hover {
    color: var(--accent);
}

/* ============================================
   CONTENT SECTIONS
   ============================================ */
.about-section {
    background: var(--surface);
    padding: var(--spacing-lg) var(--spacing-md);
}

.about-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-lg);
    align-items: center;
}

.about-image-wrapper {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
}

.about-image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
}

.about-content h2 {
    color: var(--primary);
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
}

.about-content p {
    color: var(--primary);
    line-height: 1.8;
    margin-bottom: var(--spacing-sm);
}

/* ============================================
   FOOTER STYLES
   ============================================ */
.everyday-ai-footer {
    background: var(--primary);
    color: white;
    padding: var(--spacing-lg) var(--spacing-md);
}

.footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
}

.footer-section h3 {
    color: white;
    margin-bottom: var(--spacing-sm);
}

.footer-section a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-section a:hover {
    color: var(--accent);
}

/* ============================================
   RESPONSIVE DESIGN
   ============================================ */
@media (max-width: 768px) {
    .hero-title {
        font-size: 2.5rem;
    }
    
    .about-container {
        grid-template-columns: 1fr;
    }
    
    .nav-menu {
        flex-direction: column;
        gap: 1rem;
    }
    
    .hero-actions {
        flex-direction: column;
    }
}/* ============================================
